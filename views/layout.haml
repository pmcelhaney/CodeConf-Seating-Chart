!!! Strict
%html{:dir => "ltr", :lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:http => {:equiv => 'refresh'}, :content => '600'}
    :javascript
      document.documentElement.className="dynamic"
    %title
      GitHub CodeConf 2011
      = @title
    %link{:href => "css/style.css", :media => "print, screen", :rel => "stylesheet", :type => "text/css"}
    = yield_content :css
    %script{:src => "js/jquery-1.5.2.min.js", :type => "text/javascript"}
    /%script{:src => "js/app.js", :type => "text/javascript"}
    = yield_content :js
  %body
    %a{:href => "https://github.com/pmcelhaney/CodeConf-Seating-Chart/"}
      %img{:style => "position: absolute; top: 0; right: 0; border: 0;", :src => "https://d3nwyuy0nl342s.cloudfront.net/img/30f550e0d38ceb6ef5b81500c64d970b7fb0f028/687474703a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67", :alt => "Fork me on GitHub"}
    #page{:data => {:role => 'page', :position => 'inline'}}
      #header{:data => {:role => 'header'}}
        = yield_content :header
      #content{:data => {:role => 'content'}}
        = yield
      #footer{:data => {:role => 'footer'}}
        = yield_content :footer