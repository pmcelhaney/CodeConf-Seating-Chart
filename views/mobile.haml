!!! Strict
%html{:dir => "ltr", :lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:http => {:equiv => 'refresh'}, :content => '600'}
    :javascript
      document.documentElement.className="dynamic"
    %title
      GitHub CodeConf 2011
      = @title
    %link{:href => "js/jquery-mobile/jquery.mobile-1.0a4.1.min.css", :media => "print, screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/style.css", :media => "print, screen", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "js/jquery-1.5.2.min.js", :type => "text/javascript"}
    /%script{:src => "js/app.js", :type => "text/javascript"}
    %script{:src => "js/jquery-mobile/jquery.mobile-1.0a4.1.min.js", :type => "text/javascript"}
    = yield_content :js
  %body
    #page-mobile{:data => {:role => 'page', :position => 'inline', :theme => 'a'}}
      #header{:data => {:role => 'header'}}
        = yield_content :header
      #content{:data => {:role => 'content', :theme => 'a'}}
        = yield
      #footer{:data => {:role => 'footer'}}
        = yield_content :footer